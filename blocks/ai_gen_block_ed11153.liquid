{% doc %}
  @prompt
    Generate me a custom stylish section that has a video on the left and a heading with a paragraph underneath on the rightit will all stack on mobile

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-text-block-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    max-width: 100%;
  }

  .ai-video-text-block__video-container-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-video-text-block__video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;
    border-radius: {{ block.settings.video_border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-video-text-block__video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-text-block__video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-video-text-block__video-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-video-text-block__content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-video-text-block__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-video-text-block__text-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-video-text-block__text-{{ ai_gen_id }} p {
    margin: 0 0 1em;
  }

  .ai-video-text-block__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-video-text-block-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
      padding: {{ block.settings.mobile_padding_top }}px {{ block.settings.mobile_padding_horizontal }}px {{ block.settings.mobile_padding_bottom }}px;
    }

    .ai-video-text-block__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-video-text-block__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}

<div class="ai-video-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-text-block__video-container-{{ ai_gen_id }}">
    <div class="ai-video-text-block__video-wrapper-{{ ai_gen_id }}">
      {% if block.settings.video %}
        <video
          class="ai-video-text-block__video-{{ ai_gen_id }}"
          {% if block.settings.autoplay %}autoplay{% endif %}
          {% if block.settings.loop %}loop{% endif %}
          {% if block.settings.muted %}muted{% endif %}
          {% if block.settings.controls %}controls{% endif %}
          playsinline
        >
          <source src="{{ block.settings.video }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <div class="ai-video-text-block__video-placeholder-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="5,3 19,12 5,21"></polygon>
          </svg>
        </div>
      {% endif %}
    </div>
  </div>

  <div class="ai-video-text-block__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-video-text-block__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-video-text-block__text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

