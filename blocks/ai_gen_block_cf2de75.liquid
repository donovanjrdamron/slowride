<script>
  (function() {
    class FreeGiftsTiers{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.tiers = this.querySelectorAll('.ai-free-gifts-tier-{{ ai_gen_id }}');
        this.overlay = this.querySelector('.ai-free-gifts-overlay-{{ ai_gen_id }}');
        this.closeButton = this.querySelector('.ai-free-gifts-popup-close-{{ ai_gen_id }}');
        this.popupImage = this.querySelector('#ai-popup-image-{{ ai_gen_id }}');
        this.popupTitle = this.querySelector('#ai-popup-title-{{ ai_gen_id }}');
        this.popupText = this.querySelector('#ai-popup-text-{{ ai_gen_id }}');

        this.tierData = {
          1: {
            image: '{{ block.settings.tier_1_popup_image | image_url: width: 400 }}',
            hasImage: {{ block.settings.tier_1_popup_image | json }},
            title: {{ block.settings.tier_1_popup_title | json }},
            text: {{ block.settings.tier_1_popup_text | json }}
          },
          2: {
            image: '{{ block.settings.tier_2_popup_image | image_url: width: 400 }}',
            hasImage: {{ block.settings.tier_2_popup_image | json }},
            title: {{ block.settings.tier_2_popup_title | json }},
            text: {{ block.settings.tier_2_popup_text | json }}
          },
          3: {
            image: '{{ block.settings.tier_3_popup_image | image_url: width: 400 }}',
            hasImage: {{ block.settings.tier_3_popup_image | json }},
            title: {{ block.settings.tier_3_popup_title | json }},
            text: {{ block.settings.tier_3_popup_text | json }}
          },
          4: {
            image: '{{ block.settings.tier_4_popup_image | image_url: width: 400 }}',
            hasImage: {{ block.settings.tier_4_popup_image | json }},
            title: {{ block.settings.tier_4_popup_title | json }},
            text: {{ block.settings.tier_4_popup_text | json }}
          }
        };
      }

      connectedCallback() {
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tiers.forEach(tier => {
          tier.addEventListener('click', () => {
            const tierId = tier.getAttribute('data-tier');
            this.openPopup(tierId);
          });
        });

        this.closeButton.addEventListener('click', () => {
          this.closePopup();
        });

        this.overlay.addEventListener('click', (e) => {
          if (e.target === this.overlay) {
            this.closePopup();
          }
        });document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.overlay.classList.contains('active')) {
            this.closePopup();
          }
        });
      }

      openPopup(tierId) {
        const data = this.tierData[tierId];
        if (data.hasImage) {
          this.popupImage.innerHTML = `<img src="${data.image}" alt="" loading="lazy">`;} else {
          this.popupImage.innerHTML = `<div class="ai-free-gifts-popup-image-placeholder-{{ ai_gen_id }}">${'{{ "product-1" | placeholder_svg_tag }}'}</div>`;
        }

        this.popupTitle.textContent = data.title;
        this.popupText.innerHTML = data.text;

        this.overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closePopup() {
        this.overlay.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    customElements.define('free-gifts-tiers-{{ ai_gen_id }}', FreeGiftsTiers{{ ai_gen_id }});
  })();
</script>

