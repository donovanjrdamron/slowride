{% doc %}
  @prompt
    generate me a custom block that will be under my product variant selector. i want the block to display 3 images side by side each being 1:1 aspect ratio. I want to be able to insert the images from shopify files and i want everything to be completely editable., Lets actually add a spot to add text above and below each image. make the text fully customizable

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-gallery-{{ ai_gen_id }} {
    width: 100%;
    margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
  }

  .ai-product-gallery__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-product-gallery__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    width: 100%;
  }

  .ai-product-gallery__text-above-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.text_spacing }}px;
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }};
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    {% if block.settings.text_transform != 'none' %}
      text-transform: {{ block.settings.text_transform }};
    {% endif %}
  }

  .ai-product-gallery__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-product-gallery__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-gallery__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-product-gallery__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
    color: {{ block.settings.placeholder_icon_color }};
  }

  .ai-product-gallery__text-below-{{ ai_gen_id }} {
    margin-top: {{ block.settings.text_spacing }}px;
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }};
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    {% if block.settings.text_transform != 'none' %}
      text-transform: {{ block.settings.text_transform }};
    {% endif %}
  }

  {% if block.settings.hover_effect == 'zoom' %}
    .ai-product-gallery__image-wrapper-{{ ai_gen_id }}:hover .ai-product-gallery__image-{{ ai_gen_id }} {
      transform: scale(1.05);
    }
  {% elsif block.settings.hover_effect == 'lift' %}
    .ai-product-gallery__image-wrapper-{{ ai_gen_id }} {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .ai-product-gallery__image-wrapper-{{ ai_gen_id }}:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
  {% endif %}

  {% if block.settings.show_border %}
    .ai-product-gallery__image-wrapper-{{ ai_gen_id }} {
      border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-product-gallery__container-{{ ai_gen_id }} {
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-product-gallery-{{ ai_gen_id }} {
      margin: {{ block.settings.margin_top_mobile }}px 0 {{ block.settings.margin_bottom_mobile }}px;
    }

    .ai-product-gallery__text-above-{{ ai_gen_id }},
    .ai-product-gallery__text-below-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-product-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-gallery__container-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign alt_key = 'image_' | append: i | append: '_alt'
        assign text_above_key = 'text_above_' | append: i
        assign text_below_key = 'text_below_' | append: i
        assign current_image = block.settings[image_key]
        assign current_alt = block.settings[alt_key]
        assign current_text_above = block.settings[text_above_key]
        assign current_text_below = block.settings[text_below_key]
      %}
      
      <div class="ai-product-gallery__item-{{ ai_gen_id }}">
        {% if current_text_above != blank %}
          <div class="ai-product-gallery__text-above-{{ ai_gen_id }}">
            {{ current_text_above }}
          </div>
        {% endif %}

        <div class="ai-product-gallery__image-wrapper-{{ ai_gen_id }}">
          {% if current_image %}
            <img
              src="{{ current_image | image_url: width: 600 }}"
              alt="{% if current_alt != blank %}{{ current_alt | escape }}{% else %}{{ current_image.alt | escape }}{% endif %}"
              width="600"
              height="600"
              loading="lazy"
              class="ai-product-gallery__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-product-gallery__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        {% if current_text_below != blank %}
          <div class="ai-product-gallery__text-below-{{ ai_gen_id }}">
            {{ current_text_below }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

