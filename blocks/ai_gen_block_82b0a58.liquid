{% doc %}
  @prompt
    Create me a dropdown that I can insert text and an image inside and have a title that the user will see before they click on it.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dropdown-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .ai-dropdown-header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.header_bg_color }};
    color: {{ block.settings.header_text_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    user-select: none;
  }

  .ai-dropdown-header-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.header_hover_color }};
  }

  .ai-dropdown-header-{{ ai_gen_id }}[aria-expanded="true"] {
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

  .ai-dropdown-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    margin: 0;
  }

  .ai-dropdown-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .ai-dropdown-header-{{ ai_gen_id }}[aria-expanded="true"] .ai-dropdown-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-dropdown-content-{{ ai_gen_id }} {
    background-color: {{ block.settings.content_bg_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-top: none;
    border-bottom-left-radius: {{ block.settings.border_radius }}px;
    border-bottom-right-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.content_padding }}px;
    overflow: hidden;
    max-height: 0;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .ai-dropdown-content-{{ ai_gen_id }}.active {
    max-height: 1000px;
    opacity: 1;
  }

  .ai-dropdown-image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.image_spacing }}px;
  }

  .ai-dropdown-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: block;
  }

  .ai-dropdown-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-dropdown-image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-dropdown-text-{{ ai_gen_id }} {
    color: {{ block.settings.content_text_color }};
    font-size: {{ block.settings.content_font_size }}px;
    line-height: 1.6;
  }

  .ai-dropdown-text-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-dropdown-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-dropdown-header-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }

    .ai-dropdown-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.8 }}px;
    }

    .ai-dropdown-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.9 }}px;
    }

    .ai-dropdown-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<dropdown-toggle-{{ ai_gen_id }} class="ai-dropdown-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <button
    class="ai-dropdown-header-{{ ai_gen_id }}"
    aria-expanded="false"
    aria-controls="dropdown-content-{{ ai_gen_id }}"
  >
    <h3 class="ai-dropdown-title-{{ ai_gen_id }}">{{ block.settings.dropdown_title }}</h3>
    <svg
      class="ai-dropdown-icon-{{ ai_gen_id }}"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="6,9 12,15 18,9"></polyline>
    </svg>
  </button>

  <div
    id="dropdown-content-{{ ai_gen_id }}"
    class="ai-dropdown-content-{{ ai_gen_id }}"
    role="region"
    aria-labelledby="dropdown-header-{{ ai_gen_id }}"
  >
    {% if block.settings.dropdown_image %}
      <div class="ai-dropdown-image-wrapper-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.dropdown_image | image_url: width: 800 }}"
          alt="{{ block.settings.dropdown_image.alt | escape }}"
          class="ai-dropdown-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.dropdown_image.width }}"
          height="{{ block.settings.dropdown_image.height }}"
        >
      </div>
    {% elsif block.settings.show_placeholder_image %}
      <div class="ai-dropdown-image-wrapper-{{ ai_gen_id }}">
        <div class="ai-dropdown-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      </div>
    {% endif %}

    {% if block.settings.dropdown_text %}
      <div class="ai-dropdown-text-{{ ai_gen_id }}">
        {{ block.settings.dropdown_text }}
      </div>
    {% endif %}
  </div>
</dropdown-toggle-{{ ai_gen_id }}>

<script>
  (function() {
    class DropdownToggle{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.header = this.querySelector('.ai-dropdown-header-{{ ai_gen_id }}');
        this.content = this.querySelector('.ai-dropdown-content-{{ ai_gen_id }}');
        
        if (this.header && this.content) {
          this.setupEventListeners();
        }
      }

      setupEventListeners() {
        this.header.addEventListener('click', () => {
          this.toggleDropdown();
        });

        this.header.addEventListener('keydown', (event) => {
          if (event.key === 'Enter' || event.key === ' ') {
            event.preventDefault();
            this.toggleDropdown();
          }
        });
      }

      toggleDropdown() {
        const isExpanded = this.header.getAttribute('aria-expanded') === 'true';
        
        this.header.setAttribute('aria-expanded', !isExpanded);
        
        if (isExpanded) {
          this.content.classList.remove('active');
        } else {
          this.content.classList.add('active');
        }
      }
    }

    customElements.define('dropdown-toggle-{{ ai_gen_id }}', DropdownToggle{{ ai_gen_id }});
  })();
</script>

