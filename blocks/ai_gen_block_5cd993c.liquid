<script>
  (function() {
    class FreeGiftsTracker{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.cartTotal = parseInt(this.dataset.cartTotal) || 0;
        this.progressFill = this.querySelector('[data-progress-fill]');
        this.progressText = this.querySelector('[data-progress-text]');
        this.tiers = this.querySelectorAll('.ai-free-gifts-tier-{{ ai_gen_id }}');}

      connectedCallback() {
        this.updateProgress();
        this.updateTierStates();
        document.addEventListener('cart:updated', () => {
          this.updateFromCart();
        });
      }

      updateFromCart() {
        fetch('/cart.js')
          .then(response => response.json())
          .then(cart => {
            this.cartTotal = cart.total_price;
            this.updateProgress();
            this.updateTierStates();
          });
      }

      updateProgress() {
        if (!this.progressFill || !this.progressText) return;

        const tierThresholds = Array.from(this.tiers).map(tier => 
          parseInt(tier.dataset.threshold)
        ).sort((a, b) => a - b);

        if (tierThresholds.length === 0) return;

        const maxThreshold = Math.max(...tierThresholds);
        const progressPercentage = Math.min((this.cartTotal / maxThreshold) * 100, 100);
        
        this.progressFill.style.width = progressPercentage + '%';

        const nextTier = tierThresholds.find(threshold => threshold > this.cartTotal);
        
        if (nextTier) {
          const remaining = nextTier - this.cartTotal;
          const remainingFormatted = new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD',
            minimumFractionDigits: 2
          }).format(remaining / 100);
          
          this.progressText.textContent = `Spend ${remainingFormatted} more for your next gift!`;
        } else {
          this.progressText.textContent = 'Congratulations! You\'ve unlocked all gifts!';
        }
      }

      updateTierStates() {
        this.tiers.forEach(tier => {
          const threshold = parseInt(tier.dataset.threshold);
          tier.classList.remove('unlocked', 'current');
          
          if (this.cartTotal >= threshold) {
            tier.classList.add('unlocked');
          } else {
            const tierThresholds = Array.from(this.tiers).map(t => 
              parseInt(t.dataset.threshold)
            ).sort((a, b) => a - b);
            
            const nextThreshold = tierThresholds.find(t => t > this.cartTotal);
            
            if (threshold === nextThreshold) {
              tier.classList.add('current');
            }
          }
        });
      }
    }

    customElements.define('free-gifts-tracker-{{ ai_gen_id }}', FreeGiftsTracker{{ ai_gen_id }});
  })();
</script>

