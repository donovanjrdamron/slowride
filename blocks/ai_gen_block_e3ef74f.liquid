{% doc %}
  @prompt
    Create me a vintage style section for a collapsable sections section for details on my product page. (Product Details, Shipping Info, Return/Exchange Info) 
    
    Make it fully customizable 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-vintage-accordion-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border: {{ block.settings.border_width }}px {{ block.settings.border_style }} {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-vintage-accordion__item-{{ ai_gen_id }} {
    border-bottom: {{ block.settings.divider_width }}px solid {{ block.settings.divider_color }};
  }

  .ai-vintage-accordion__item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-vintage-accordion__header-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.item_padding }}px 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: all 0.3s ease;
  }

  .ai-vintage-accordion__header-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-vintage-accordion__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    text-transform: {{ block.settings.title_transform }};
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    margin: 0;
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-style: {{ block.settings.title_font.style }};
  }

  .ai-vintage-accordion__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
    color: {{ block.settings.icon_color }};
  }

  .ai-vintage-accordion__header-{{ ai_gen_id }}[aria-expanded="true"] .ai-vintage-accordion__icon-{{ ai_gen_id }} {
    transform: rotate({{ block.settings.icon_rotation }}deg);
  }

  .ai-vintage-accordion__content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }

  .ai-vintage-accordion__content-{{ ai_gen_id }}.active {
    max-height: 1000px;
  }

  .ai-vintage-accordion__text-{{ ai_gen_id }} {
    padding: 0 0 {{ block.settings.item_padding }}px 0;
    font-size: {{ block.settings.content_size }}px;
    line-height: {{ block.settings.content_line_height }};
    color: {{ block.settings.content_color }};
    font-family: {{ block.settings.content_font.family }}, {{ block.settings.content_font.fallback_families }};
    font-style: {{ block.settings.content_font.style }};
  }

  .ai-vintage-accordion__text-{{ ai_gen_id }} p {
    margin: 0 0 12px 0;
  }

  .ai-vintage-accordion__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-vintage-accordion__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
    }

    .ai-vintage-accordion__text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.content_size }}px * 0.9);
    }
  }
{% endstyle %}

<vintage-accordion-{{ ai_gen_id }} class="ai-vintage-accordion-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.item_1_enabled %}
    <div class="ai-vintage-accordion__item-{{ ai_gen_id }}">
      <button
        class="ai-vintage-accordion__header-{{ ai_gen_id }}"
        aria-expanded="{% if block.settings.item_1_open_default %}true{% else %}false{% endif %}"
        data-accordion-trigger
      >
        <h3 class="ai-vintage-accordion__title-{{ ai_gen_id }}">{{ block.settings.item_1_title }}</h3>
        <svg class="ai-vintage-accordion__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ block.settings.icon_stroke_width }}" stroke-linecap="round" stroke-linejoin="round">
          {% if block.settings.icon_style == 'plus' %}
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          {% elsif block.settings.icon_style == 'chevron' %}
            <polyline points="6 9 12 15 18 9"></polyline>
          {% elsif block.settings.icon_style == 'arrow' %}
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <polyline points="19 12 12 19 5 12"></polyline>
          {% endif %}
        </svg>
      </button>
      <div class="ai-vintage-accordion__content-{{ ai_gen_id }} {% if block.settings.item_1_open_default %}active{% endif %}" data-accordion-content>
        <div class="ai-vintage-accordion__text-{{ ai_gen_id }}">
          {{ block.settings.item_1_content }}
        </div>
      </div>
    </div>
  {% endif %}

  {% if block.settings.item_2_enabled %}
    <div class="ai-vintage-accordion__item-{{ ai_gen_id }}">
      <button
        class="ai-vintage-accordion__header-{{ ai_gen_id }}"
        aria-expanded="{% if block.settings.item_2_open_default %}true{% else %}false{% endif %}"
        data-accordion-trigger
      >
        <h3 class="ai-vintage-accordion__title-{{ ai_gen_id }}">{{ block.settings.item_2_title }}</h3>
        <svg class="ai-vintage-accordion__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ block.settings.icon_stroke_width }}" stroke-linecap="round" stroke-linejoin="round">
          {% if block.settings.icon_style == 'plus' %}
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          {% elsif block.settings.icon_style == 'chevron' %}
            <polyline points="6 9 12 15 18 9"></polyline>
          {% elsif block.settings.icon_style == 'arrow' %}
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <polyline points="19 12 12 19 5 12"></polyline>
          {% endif %}
        </svg>
      </button>
      <div class="ai-vintage-accordion__content-{{ ai_gen_id }} {% if block.settings.item_2_open_default %}active{% endif %}" data-accordion-content>
        <div class="ai-vintage-accordion__text-{{ ai_gen_id }}">
          {{ block.settings.item_2_content }}
        </div>
      </div>
    </div>
  {% endif %}

  {% if block.settings.item_3_enabled %}
    <div class="ai-vintage-accordion__item-{{ ai_gen_id }}">
      <button
        class="ai-vintage-accordion__header-{{ ai_gen_id }}"
        aria-expanded="{% if block.settings.item_3_open_default %}true{% else %}false{% endif %}"
        data-accordion-trigger
      >
        <h3 class="ai-vintage-accordion__title-{{ ai_gen_id }}">{{ block.settings.item_3_title }}</h3>
        <svg class="ai-vintage-accordion__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="{{ block.settings.icon_stroke_width }}" stroke-linecap="round" stroke-linejoin="round">
          {% if block.settings.icon_style == 'plus' %}
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          {% elsif block.settings.icon_style == 'chevron' %}
            <polyline points="6 9 12 15 18 9"></polyline>
          {% elsif block.settings.icon_style == 'arrow' %}
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <polyline points="19 12 12 19 5 12"></polyline>
          {% endif %}
        </svg>
      </button>
      <div class="ai-vintage-accordion__content-{{ ai_gen_id }} {% if block.settings.item_3_open_default %}active{% endif %}" data-accordion-content>
        <div class="ai-vintage-accordion__text-{{ ai_gen_id }}">
          {{ block.settings.item_3_content }}
        </div>
      </div>
    </div>
  {% endif %}
</vintage-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class VintageAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.triggers = this.querySelectorAll('[data-accordion-trigger]');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.triggers.forEach((trigger) => {
          trigger.addEventListener('click', () => {
            const content = trigger.nextElementSibling;
            const isExpanded = trigger.getAttribute('aria-expanded') === 'true';

            trigger.setAttribute('aria-expanded', !isExpanded);
            content.classList.toggle('active');
          });
        });
      }
    }

    customElements.define('vintage-accordion-{{ ai_gen_id }}', VintageAccordion{{ ai_gen_id }});
  })();
</script>

