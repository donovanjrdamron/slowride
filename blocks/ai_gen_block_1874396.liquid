{% doc %}
  @prompt
    Create me a custom product tier section for a tier offer system for my product page. I want it to cleanly show my  black friday tier based system by tier. I should be able to add as many tiers as i want and each one should show the price, description, a photo, this is way too big. it just needs to be small blocks for the product page , please make the size of the heading adjustable and add a small description below the heading thats all adjustable. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-tiers-{{ ai_gen_id }} {
    margin: {{ block.settings.block_margin }}px 0;
  }

  .ai-product-tiers__heading-{{ ai_gen_id }} {
    margin: 0 0 8px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
  }

  .ai-product-tiers__description-{{ ai_gen_id }} {
    margin: 0 0 12px;
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
  }

  .ai-product-tiers__list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-tier-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background-color: {{ block.settings.tier_background }};
    border: 1px solid {{ block.settings.tier_border_color }};
    border-radius: {{ block.settings.tier_border_radius }}px;
    transition: background-color 0.2s ease;
  }

  .ai-product-tier-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tier_hover_background }};
  }

  .ai-product-tier__image-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    border-radius: 4px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-product-tier__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-tier__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-tier__image-placeholder-{{ ai_gen_id }} svg {
    width: 70%;
    height: 70%;
    opacity: 0.2;
  }

  .ai-product-tier__content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-product-tier__header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 4px;
  }

  .ai-product-tier__title-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.tier_title_color }};
    font-size: 14px;
    font-weight: 600;
  }

  .ai-product-tier__badge-{{ ai_gen_id }} {
    display: inline-block;
    padding: 2px 8px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    font-size: 10px;
    font-weight: 600;
    border-radius: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-tier__price-{{ ai_gen_id }} {
    color: {{ block.settings.tier_price_color }};
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 4px;
  }

  .ai-product-tier__description-{{ ai_gen_id }} {
    color: {{ block.settings.tier_description_color }};
    font-size: 12px;
    line-height: 1.4;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-tier__image-{{ ai_gen_id }} {
      width: 50px;
      height: 50px;
    }

    .ai-product-tiers__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.9);
    }

    .ai-product-tiers__description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-product-tiers-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h3 class="ai-product-tiers__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
  {% endif %}

  {% if block.settings.description != blank %}
    <div class="ai-product-tiers__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
  {% endif %}

  <div class="ai-product-tiers__list-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% liquid
        assign tier_enabled_key = 'tier_' | append: i | append: '_enabled'
        assign tier_title_key = 'tier_' | append: i | append: '_title'
        assign tier_price_key = 'tier_' | append: i | append: '_price'
        assign tier_description_key = 'tier_' | append: i | append: '_description'
        assign tier_image_key = 'tier_' | append: i | append: '_image'
        assign tier_badge_key = 'tier_' | append: i | append: '_badge'

        assign tier_enabled = block.settings[tier_enabled_key]
        assign tier_title = block.settings[tier_title_key]
        assign tier_price = block.settings[tier_price_key]
        assign tier_description = block.settings[tier_description_key]
        assign tier_image = block.settings[tier_image_key]
        assign tier_badge = block.settings[tier_badge_key]
      %}

      {% if tier_enabled %}
        <div class="ai-product-tier-{{ ai_gen_id }}">
          <div class="ai-product-tier__image-{{ ai_gen_id }}">
            {% if tier_image %}
              <img
                src="{{ tier_image | image_url: width: 120 }}"
                alt="{{ tier_title | escape }}"
                loading="lazy"
                width="120"
                height="120"
              >
            {% else %}
              <div class="ai-product-tier__image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="ai-product-tier__content-{{ ai_gen_id }}">
            <div class="ai-product-tier__header-{{ ai_gen_id }}">
              {% if tier_title != blank %}
                <h4 class="ai-product-tier__title-{{ ai_gen_id }}">{{ tier_title }}</h4>
              {% endif %}
              {% if tier_badge != blank %}
                <span class="ai-product-tier__badge-{{ ai_gen_id }}">{{ tier_badge }}</span>
              {% endif %}
            </div>

            {% if tier_price != blank %}
              <div class="ai-product-tier__price-{{ ai_gen_id }}">{{ tier_price }}</div>
            {% endif %}

            {% if tier_description != blank %}
              <p class="ai-product-tier__description-{{ ai_gen_id }}">{{ tier_description }}</p>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

