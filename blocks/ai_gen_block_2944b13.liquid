{% doc %}
  @prompt
    Create me a simple but fully effective and customizable hero section that contains an image backround with h1 text and small description and call to action button. I should be able to choose between the 3 4 most popular hero section aspect ratios for the size of the image, i should be able to adjust the position, and size of all the text, and i should be able to add a video if i choose. Make everything else customizable as well., remove the empty space on the side of the section and make it max width to cover the entire screen, make it so that i can add a seperate size aspect ratio and image on mobile and fully customize the mobile experience
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    overflow: hidden;
    display: flex;
    align-items: {{ block.settings.content_vertical_alignment }};
    justify-content: {{ block.settings.content_horizontal_alignment }};
  }

  .ai-hero-{{ ai_gen_id }}--aspect-16-9 {
    aspect-ratio: 16 / 9;
  }

  .ai-hero-{{ ai_gen_id }}--aspect-21-9 {
    aspect-ratio: 21 / 9;
  }

  .ai-hero-{{ ai_gen_id }}--aspect-4-3 {
    aspect-ratio: 4 / 3;
  }

  .ai-hero-{{ ai_gen_id }}--aspect-3-2 {
    aspect-ratio: 3 / 2;
  }

  .ai-hero-{{ ai_gen_id }}--aspect-1-1 {
    aspect-ratio: 1 / 1;
  }

  .ai-hero-{{ ai_gen_id }}--aspect-9-16 {
    aspect-ratio: 9 / 16;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-background-mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-video-mobile-{{ ai_gen_id }} {
    display: none;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: {{ block.settings.content_max_width }}px;
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  .ai-hero-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0 0 {{ block.settings.description_spacing }}px;
    line-height: 1.5;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-hero-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
    opacity: 0.3;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-{{ ai_gen_id }} {
      align-items: {{ block.settings.mobile_content_vertical_alignment }};
      justify-content: {{ block.settings.mobile_content_horizontal_alignment }};
    }

    .ai-hero-{{ ai_gen_id }}--aspect-16-9,
    .ai-hero-{{ ai_gen_id }}--aspect-21-9,
    .ai-hero-{{ ai_gen_id }}--aspect-4-3,
    .ai-hero-{{ ai_gen_id }}--aspect-3-2,
