{% endstyle %}

<div
  class="ai-hero-{{ ai_gen_id }} ai-hero-{{ ai_gen_id }}--aspect-{{ block.settings.aspect_ratio }} ai-hero-{{ ai_gen_id }}--mobile-aspect-{{ block.settings.mobile_aspect_ratio }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.video != blank %}
    <video
      class="ai-hero-video-{{ ai_gen_id }}"
      autoplay
      muted
      loop
      playsinline
    >
      <source src="{{ block.settings.video }}" type="video/mp4">
    </video>
  {% elsif block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 2000 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      loading="lazy"
      width="{{ block.settings.background_image.width }}"
      height="{{ block.settings.background_image.height }}"
      class="ai-hero-background-{{ ai_gen_id }}"
    >
  {% else %}
    <div class="ai-hero-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
      <div class="ai-hero-empty-state-{{ ai_gen_id }}">
        Add a background image or video
      </div>
    </div>
  {% endif %}

  {% if block.settings.mobile_video != blank %}
    <video
      class="ai-hero-video-mobile-{{ ai_gen_id }}"
      autoplay
      muted
      loop
      playsinline
    >
      <source src="{{ block.settings.mobile_video }}" type="video/mp4">
    </video>
  {% elsif block.settings.mobile_background_image %}
    <img
      src="{{ block.settings.mobile_background_image | image_url: width: 1000 }}"
      alt="{{ block.settings.mobile_background_image.alt | escape }}"
      loading="lazy"
      width="{{ block.settings.mobile_background_image.width }}"
      height="{{ block.settings.mobile_background_image.height }}"
      class="ai-hero-background-mobile-{{ ai_gen_id }}"
    >
  {% endif %}

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-hero-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-hero-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

