{% doc %}
  @prompt
    create me a sleek announcement block that i can use to call out free gifts that the person will receive. i want to be able to add a picture. it shouldn't take too much space
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gift-announcement-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-gift-announcement__container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 12px 16px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    {% if block.settings.show_border %}
      border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}
  }

  .ai-gift-announcement__image-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-gift-announcement__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-gift-announcement__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.placeholder_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-gift-announcement__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-gift-announcement__content-{{ ai_gen_id }} {
    flex-grow: 1;
    min-width: 0;
  }

  .ai-gift-announcement__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-gift-announcement__container-{{ ai_gen_id }} {
      gap: 12px;
      padding: 10px 12px;
    }

    .ai-gift-announcement__image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }

    .ai-gift-announcement__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<gift-announcement-{{ ai_gen_id }}
  class="ai-gift-announcement-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-gift-announcement__container-{{ ai_gen_id }}">
    <div class="ai-gift-announcement__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.gift_image %}
        <img
          src="{{ block.settings.gift_image | image_url: width: 200 }}"
          alt="{{ block.settings.gift_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image_size }}"
          height="{{ block.settings.image_size }}"
          class="ai-gift-announcement__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-gift-announcement__image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="ai-gift-announcement__content-{{ ai_gen_id }}">
      {% if block.settings.announcement_text != blank %}
        <p class="ai-gift-announcement__text-{{ ai_gen_id }}">
          {{ block.settings.announcement_text }}
        </p>
      {% else %}
        <p class="ai-gift-announcement__text-{{ ai_gen_id }}">
          Free gift with purchase
        </p>
      {% endif %}
    </div>
  </div>
</gift-announcement-{{ ai_gen_id }}>

<script>
  (function() {
    class GiftAnnouncement{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('gift-announcement-{{ ai_gen_id }}', GiftAnnouncement{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Free gift announcement",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "image_picker",
      "id": "gift_image",
      "label": "Gift image"
    },
    {
      "type": "textarea",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free gift with purchase"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#063d49"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 8
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "range",
      "id": "image_size",
      "min": 40,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Image size",
      "default": 60
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    },
    {
      "type": "color",
      "id": "placeholder_bg_color",
      "label": "Placeholder background",
      "default": "#e6e6e6"
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show border",
      "default": false
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 1,
      "max": 4,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 1
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#e6e6e6"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Free gift announcement"
    }
  ]
}
{% endschema %}
