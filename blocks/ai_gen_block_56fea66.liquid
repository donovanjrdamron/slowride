{% doc %}
  @prompt
    Make me a time section for my black friday sale that is fully customizable so i can change the end date and colors of the design. there should be text with the countdown right next to it. the countdown and text should both be  1 line on both mobile and desktop, make it so that  can adjust the size for mobile 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bf-countdown-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    width: 100%;
  }

  .ai-bf-countdown-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.alignment }};
    gap: {{ block.settings.gap }}px;
    flex-wrap: nowrap;
    width: 100%;
  }

  .ai-bf-countdown-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    margin: 0;
    white-space: nowrap;
  }

  .ai-bf-countdown-timer-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.timer_gap }}px;
    align-items: center;
  }

  .ai-bf-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .ai-bf-countdown-value-{{ ai_gen_id }} {
    background-color: {{ block.settings.timer_bg_color }};
    color: {{ block.settings.timer_text_color }};
    font-size: {{ block.settings.timer_size }}px;
    font-weight: {{ block.settings.timer_weight }};
    padding: {{ block.settings.timer_padding }}px {{ block.settings.timer_padding | times: 1.5 }}px;
    border-radius: {{ block.settings.timer_border_radius }}px;
    min-width: {{ block.settings.timer_min_width }}px;
    text-align: center;
    line-height: 1;
  }

  .ai-bf-countdown-label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-bf-countdown-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.timer_size }}px;
    font-weight: {{ block.settings.timer_weight }};
    line-height: 1;
  }

  .ai-bf-countdown-expired-{{ ai_gen_id }} {
    color: {{ block.settings.expired_text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    text-align: center;
  }

  @media screen and (max-width: 749px) {
    .ai-bf-countdown-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical_mobile }}px {{ block.settings.padding_horizontal_mobile }}px;
    }

    .ai-bf-countdown-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }

    .ai-bf-countdown-value-{{ ai_gen_id }} {
      font-size: {{ block.settings.timer_size_mobile }}px;
      padding: {{ block.settings.timer_padding_mobile }}px {{ block.settings.timer_padding_mobile | times: 1.5 }}px;
      min-width: {{ block.settings.timer_min_width_mobile }}px;
    }

    .ai-bf-countdown-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size_mobile }}px;
    }

    .ai-bf-countdown-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.timer_size_mobile }}px;
    }

    .ai-bf-countdown-container-{{ ai_gen_id }} {
      gap: {{ block.settings.gap_mobile }}px;
    }

    .ai-bf-countdown-timer-{{ ai_gen_id }} {
      gap: {{ block.settings.timer_gap_mobile }}px;
    }

    .ai-bf-countdown-expired-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<black-friday-countdown-{{ ai_gen_id }}
  class="ai-bf-countdown-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  data-end-time="{{ block.settings.end_time }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-bf-countdown-container-{{ ai_gen_id }}">
    {% if block.settings.countdown_text != blank %}
      <div class="ai-bf-countdown-text-{{ ai_gen_id }}">{{ block.settings.countdown_text }}</div>
    {% endif %}

    <div class="ai-bf-countdown-timer-{{ ai_gen_id }}" data-timer>
      {% if block.settings.show_days %}
        <div class="ai-bf-countdown-unit-{{ ai_gen_id }}">
          <div class="ai-bf-countdown-value-{{ ai_gen_id }}" data-days>00</div>
          {% if block.settings.show_labels %}
            <div class="ai-bf-countdown-label-{{ ai_gen_id }}">{{ block.settings.days_label }}</div>
          {% endif %}
        </div>
        {% if block.settings.show_separator %}
          <div class="ai-bf-countdown-separator-{{ ai_gen_id }}">:</div>
        {% endif %}
      {% endif %}

      <div class="ai-bf-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-bf-countdown-value-{{ ai_gen_id }}" data-hours>00</div>
        {% if block.settings.show_labels %}
          <div class="ai-bf-countdown-label-{{ ai_gen_id }}">{{ block.settings.hours_label }}</div>
        {% endif %}
      </div>

      {% if block.settings.show_separator %}
        <div class="ai-bf-countdown-separator-{{ ai_gen_id }}">:</div>
      {% endif %}

      <div class="ai-bf-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-bf-countdown-value-{{ ai_gen_id }}" data-minutes>00</div>
        {% if block.settings.show_labels %}
          <div class="ai-bf-countdown-label-{{ ai_gen_id }}">{{ block.settings.minutes_label }}</div>
        {% endif %}
      </div>

      {% if block.settings.show_separator %}
        <div class="ai-bf-countdown-separator-{{ ai_gen_id }}">:</div>
      {% endif %}

      <div class="ai-bf-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-bf-countdown-value-{{ ai_gen_id }}" data-seconds>00</div>
        {% if block.settings.show_labels %}
          <div class="ai-bf-countdown-label-{{ ai_gen_id }}">{{ block.settings.seconds_label }}</div>
        {% endif %}
      </div>
    </div>

    <div class="ai-bf-countdown-expired-{{ ai_gen_id }}" data-expired style="display: none;">
      {{ block.settings.expired_message }}
    </div>
  </div>
</black-friday-countdown-{{ ai_gen_id }}>

<script>
  (function() {
    class BlackFridayCountdown{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.endDate = this.dataset.endDate;
        this.endTime = this.dataset.endTime;
        this.timer = this.querySelector('[data-timer]');
        this.expiredMessage = this.querySelector('[data-expired]');
        this.daysEl = this.querySelector('[data-days]');
        this.hoursEl = this.querySelector('[data-hours]');
        this.minutesEl = this.querySelector('[data-minutes]');
        this.secondsEl = this.querySelector('[data-seconds]');
        this.interval = null;
      }

      connectedCallback() {
        if (!this.endDate || !this.endTime) {
          return;
        }

        this.startCountdown();
      }

      disconnectedCallback() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }

      startCountdown() {
        this.updateCountdown();
        this.interval = setInterval(() => {
          this.updateCountdown();
        }, 1000);
      }

      updateCountdown() {
        const endDateTime = new Date(this.endDate + 'T' + this.endTime).getTime();
        const now = new Date().getTime();
        const distance = endDateTime - now;

        if (distance < 0) {
          clearInterval(this.interval);
          this.timer.style.display = 'none';
          this.expiredMessage.style.display = 'block';
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        if (this.daysEl) {
          this.daysEl.textContent = String(days).padStart(2, '0');
        }
        this.hoursEl.textContent = String(hours).padStart(2, '0');
        this.minutesEl.textContent = String(minutes).padStart(2, '0');
        this.secondsEl.textContent = String(seconds).padStart(2, '0');
      }
    }

    customElements.define('black-friday-countdown-{{ ai_gen_id }}', BlackFridayCountdown{{ ai_gen_id }});
  })();
</script>

