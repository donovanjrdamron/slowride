          "blocks": {
            "right_caption": {
              "type": "text",
              "name": "Caption",
              "settings": {
                "text": "<p>The Community</p>",
                "type_preset": "h6"
              }
            },
            "right_group": {
              "type": "group",
              "settings": {
                "height": "fit"
              },
              "blocks": {
                "right_heading": {
                  "type": "text",
                  "name": "Heading",
                  "settings": {
                    "text": "<h2>More than a brand — a crew</h2>",
                    "type_preset": "h3"
                  }
                },
                "right_body": {
                  "type": "text",
                  "settings": {
                    "text": "<p>The people who ride with us aren't just customers — they're part of the story. Every meetup, every ride, every late night in the shop. This is what we're building together.</p>",
                    "max_width": "narrow",
                    "type_preset": "rte"
                  }
                }
              },
              "block_order": ["right_heading", "right_body"]
            },
            "right_button": {
              "type": "button",
              "settings": {
                "label": "Join the ride",
                "link": "shopify://collections/all",
                "style_class": "link"
              }
            }
          },
          "block_order": ["right_caption", "right_group", "right_button"]
        }
      }
    },

