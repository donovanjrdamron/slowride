<style>
  {% if section.settings.override_fonts %}
    {{ section.settings.text_font | font_face }}
    {{ section.settings.timer_font | font_face }}
  {% endif %}

  {% if section.settings.show_on_device == 'mobile' %}
    @media (min-width: 801px) {
        #spro-{{ section.id }} {
            display: none;
        }
    }
  {% endif %}

  {% if section.settings.show_on_device == 'desktop' %}
    @media (max-width: 800px) {
        #spro-{{ section.id }} {
            display: none;
        }
    }
  {% endif %}

  #spro-{{ section.id }}.spro-section {
    background-image: {{ section.settings.background_color }};
  }

  #spro-{{ section.id }} .spro-headline {
    {% if section.settings.icon != 'none' %}
    display: grid;
    grid-template-columns: {{ section.settings.icon_size }}px 1fr;
    gap: {{ section.settings.grid_gap }}px;
    align-items: center;
    {% endif %}
  }

  #spro-{{ section.id }} .spro-headline p {
    {% if section.settings.override_text_sizes %}
    font-size: {{ section.settings.text_size }}px;
    {% endif %}
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    color: {{ section.settings.text_color }};
    line-height: 1.15;
    margin: 0;
    padding: 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #spro-{{ section.id }} .spro-headline p a {
    color: {{ section.settings.link_color }};
    {% if section.settings.underline_link %}text-decoration: underline;{% endif %}
  }

  #spro-{{ section.id }} .spro-icon {
    fill: {{ section.settings.icon_color }};
    margin-right: 5px;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
  }

  #spro-{{ section.id }} .spro-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    align-items: center;
    gap: 10px;
  }

  @media only screen and (max-width: 900px) {
    #spro-{{ section.id }} .spro-container {
      display: grid;
      grid-template-columns: 1fr;
    }
  }

  #spro-{{ section.id }} .spro-time {
    display: inline-block;
    text-align: right;
  }

  @media only screen and (max-width: 900px) {
    #spro-{{ section.id }} .spro-time {
      text-align: left;
    }
  }

  #spro-{{ section.id }} .spro-timer {
    display: inline-block;
    width: 50px;
    position: relative;
    background-image: {{ section.settings.countdown_background_color }};
    padding: 5px;
    text-align: center;
    border-radius: 5px;
  }

  #spro-{{ section.id }} .spro-label {
    display: inline-block;
    color: {{ section.settings.text_color }};
    font-size: 14px;
    text-align: center;
    width: auto;
    padding: 0 2px;
  }

  #spro-{{ section.id }} .spro-timer-container {
    text-align: center;
  }

  #spro-{{ section.id }} .spro-timer {
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.timer_font.family }}, {{ section.settings.timer_font.fallback_families }};
    font-weight: {{ section.settings.timer_font.weight }};
    {% endif %}
    {% if section.settings.override_text_sizes %}
    font-size: {{ section.settings.timer_size }}px;
    {% endif %}
    font-weight: bold;
    color: {{ section.settings.timer_color }};
  }
</style>

