<script>
    function startCountdown() {

      var daysElement = document.getElementById('spro-{{ section.id }}-days');
      var hoursElement = document.getElementById('spro-{{ section.id }}-hours');
      var minutesElement = document.getElementById('spro-{{ section.id }}-minutes');
      var secondsElement = document.getElementById('spro-{{ section.id }}-seconds');

      var countdownInterval = setInterval(function () {

        // YYYY-MM-DDTHH:mm:ss.sssZ
        var end_yyyy = (new Date(new Date().setFullYear(new Date().getFullYear() + {{ section.settings.end_year }}))).getFullYear();
        var end_mm = `{{ section.settings.end_month }}`;
        var end_dd = `{{ section.settings.end_day }}`;
        end_dd = end_dd.toString().padStart(2, '0');
        var end_hh = `{{ section.settings.end_hour }}`;
        var end_min = `{{ section.settings.end_minute }}`;
        var end_date_str = `${end_yyyy}-${end_mm}-${end_dd}T${end_hh}:${end_min}:00.000{{ section.settings.end_timezone }}`;
        var end = Date.parse(end_date_str);
        
        var now = new Date();
        var distance = end - now;

        // defaults
        var _second = 1000;
        var _minute = _second * 60;
        var _hour = _minute * 60;
        var _day = _hour * 24;
        
        var days = Math.floor(distance / _day);
        var hours = Math.floor((distance % _day) / _hour);
        var minutes = Math.floor((distance % _hour) / _minute);
        var seconds = Math.floor((distance % _minute) / _second);

        if (hours === 0 && minutes === 0 && seconds === 0) {
          clearInterval(countdownInterval);
          return;
        }

        if (seconds === 0) {
          seconds = 59;

          if (minutes === 0) {
            minutes = 59;
            hours--;
          } else {
            minutes--;
          }
        } else {
          seconds--;
        }

        if(daysElement)daysElement.innerText = days.toString().padStart(2, '0');
        if(hoursElement)hoursElement.innerText = hours.toString().padStart(2, '0');
        if(minutesElement)minutesElement.innerText = minutes.toString().padStart(2, '0');
        if(secondsElement)secondsElement.innerText = seconds.toString().padStart(2, '0');
      }, 1000);
    }

    startCountdown();
