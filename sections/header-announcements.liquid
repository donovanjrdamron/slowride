
{%- liquid
  assign is_marquee = false
  if section.settings.display_mode == 'marquee'
    assign is_marquee = true
  endif
-%}

{% if is_marquee == false and section.blocks.size > 1 %}
  <script
    src="{{ 'announcement-bar.js' | asset_url }}"
    type="module"
  ></script>
{% endif %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<aside
  class="announcement-bar spacing-style section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}; --border-bottom-width: {{ section.settings.divider_width }}px;"
>
  {%- if is_marquee -%}
    {%- comment -%} ========== MARQUEE / SCROLLING TICKER MODE ========== {%- endcomment -%}

    {%- capture marquee_items -%}
      {%- for block in section.blocks -%}
        {%- assign plain_text = block.settings.text | strip_newlines | strip_html | strip -%}
        {%- unless plain_text == '' -%}
          <span
            class="
              announcement-bar__marquee-item
              custom-typography
              {% if block.settings.font_size != '' %}custom-font-size{% endif %}
              {% if block.settings.weight != '' %}custom-font-weight{% endif %}
            "
            style="{% render 'typography-style', settings: block.settings, preset: 'custom' %} --line-height: 1;"
          >
            <span class="announcement-bar__text-inner">
              {{- block.settings.text -}}
              {%- if block.settings.show_scribble -%}
                <svg class="announcement-bar__scribble announcement-bar__scribble--marquee" viewBox="0 0 200 14" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path d="M0,7 C8,1 16,13 28,7 C40,1 48,13 60,7 C72,1 80,13 92,7 C104,1 112,13 124,7 C136,1 144,13 156,7 C168,1 176,13 188,7 C196,1 200,7 200,7" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" pathLength="100"/>
                </svg>
              {%- endif -%}
            </span>

            {%- if block.settings.separator_icon != 'none' -%}
              <span class="announcement-bar__separator" aria-hidden="true">
                {%- case block.settings.separator_icon -%}
                  {%- when 'circle' -%}
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="8" stroke="currentColor" stroke-width="2"/></svg>
                  {%- when 'dot' -%}
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="5" fill="currentColor"/></svg>
                  {%- when 'diamond' -%}
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 2L22 12L12 22L2 12Z" stroke="currentColor" stroke-width="2"/></svg>
                  {%- when 'star' -%}
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" fill="currentColor"/></svg>
                  {%- when 'slash' -%}
                    <svg viewBox="0 0 12 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M10 2L2 22" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                {%- endcase -%}
              </span>
            {%- endif -%}
          </span>
        {%- endunless -%}
      {%- endfor -%}
    {%- endcapture -%}

    <div
      class="announcement-bar__marquee"
      style="
        --marquee-duration: {{ section.settings.marquee_speed }}s;
        --marquee-direction: {% if section.settings.scroll_direction == 'right' %}reverse{% else %}normal{% endif %};
      "
    >
      <div class="announcement-bar__marquee-track">
        <div class="announcement-bar__marquee-content">
          {{ marquee_items }}{{ marquee_items }}{{ marquee_items }}{{ marquee_items }}
        </div>
        <div class="announcement-bar__marquee-content" aria-hidden="true">
          {{ marquee_items }}{{ marquee_items }}{{ marquee_items }}{{ marquee_items }}
        </div>
      </div>
    </div>

  {%- else -%}
    {%- comment -%} ========== STATIC MODE (existing fade/rotate) ========== {%- endcomment -%}

    {% liquid
      assign autoplay = false
      assign show_arrows = false
      if section.blocks.size > 1
        assign autoplay = true
        assign show_arrows = true
      endif
    %}

    <announcement-bar-component
      class="announcement-bar__slider"
      {% if autoplay == true %}
        autoplay="{{ section.settings.speed }}" aria-live="polite"
      {% endif %}
    >
      {% if show_arrows %}
        {% render 'slideshow-arrows', icon_style: 'chevron' %}
      {% endif %}

      <div class="announcement-bar__slides">
        {% content_for 'blocks' %}
      </div>
    </announcement-bar-component>

  {%- endif -%}
</aside>

{% stylesheet %}
  /* ===== Shared announcement bar styles ===== */
  .announcement-bar {
    border-block-end: var(--border-bottom-width) solid var(--color-border);
  }

  .announcement-bar__text:first-child {
    margin: 0;
  }

  .announcement-bar__text {
    overflow: visible;
    position: relative;
  }

  .announcement-bar__link {
    position: absolute;
    inset: 0;
  }

  /* ===== Static / fade mode styles ===== */
  .announcement-bar__slider {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;

    @media screen and (width < 750px) {
      grid-column: 1 / -1;
    }
  }

  .announcement-bar__slides {
    display: grid;
    grid: [stack] auto / [stack] auto;
    width: calc(100% - var(--button-size) * 2);
    max-width: 680px;
    margin-inline: auto;
  }

  .announcement-bar__slides > * {
    grid-area: stack;
  }

  .announcement-bar__slide {
    transition: opacity 0.5s ease-in-out, visibility 0.5s ease-in-out;
    place-content: center;

    &[aria-hidden='true'] {
      opacity: 0;
      visibility: hidden;
    }
  }

  .announcement-bar__slider slideshow-arrows {
    padding: 0;
  }

  .announcement-bar__slider slideshow-arrows[shape='none'] {
    mix-blend-mode: normal;
  }

  .announcement-bar__slider slideshow-arrows .slideshow-control--shape-none {
    color: var(--color-foreground);
  }

  .announcement-bar__slider .slideshow-control {
    display: flex;
    padding: 0;
    width: var(--button-size);
    height: var(--button-size);
    align-items: center;
    justify-content: center;
    opacity: 1;
    animation: none;

    @media screen and (width >= 750px) {
      --slideshow-control-offset: calc((var(--button-size) - var(--icon-size-xs)) / 2);

      .section--page-width &.slideshow-control--previous {
        transform: translateX(var(--slideshow-control-offset));
      }
    }
  }

  .announcement-bar__slider .slideshow-control .svg-wrapper {
    width: var(--icon-size-xs);
    height: var(--icon-size-xs);
  }

  /* ===== Marquee / scrolling ticker styles ===== */
  .announcement-bar__marquee {
    overflow: hidden;
    width: 100%;
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 3%,
      black 97%,
      transparent 100%
    );
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 3%,
      black 97%,
      transparent 100%
    );
  }

  .announcement-bar__marquee-track {
    display: flex;
    width: max-content;
    animation: marquee-scroll var(--marquee-duration, 20s) linear infinite;
    animation-direction: var(--marquee-direction, normal);
  }

  .announcement-bar__marquee:hover .announcement-bar__marquee-track {
    animation-play-state: paused;
  }

  .announcement-bar__marquee-content {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    white-space: nowrap;
  }

  .announcement-bar__marquee-item {
    display: inline-flex;
    align-items: center;
    gap: 0;
    white-space: nowrap;
    padding-inline: 0.25em;
  }

  .announcement-bar__separator {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin-inline: 1.5em;
    flex-shrink: 0;
  }

  .announcement-bar__separator svg {
    width: 1em;
    height: 1em;
    display: block;
  }

  @keyframes marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.announcement_bar",
  "blocks": [
    {
      "type": "_announcement"
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "display_mode",
      "label": "Display mode",
      "options": [
        {
          "value": "static",
          "label": "Static (fade between slides)"
        },
        {
          "value": "marquee",
          "label": "Scrolling marquee"
        }
      ],
      "default": "static"
    },
    {
      "type": "header",
      "content": "Static mode"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "t:settings.speed",
      "info": "Time between slide transitions",
      "min": 2,
      "max": 10,
      "default": 5,
      "unit": "sec"
    },
    {
      "type": "header",
      "content": "Marquee mode"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "Scroll speed",
      "info": "Seconds for one full scroll cycle (lower = faster)",
      "min": 10,
      "max": 60,
      "step": 2,
      "default": 20,
      "unit": "sec"
    },
    {
      "type": "select",
      "id": "scroll_direction",
      "label": "Scroll direction",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.section_width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-4",
      "label": "t:settings.color_scheme"
    },
    {
      "type": "range",
      "id": "divider_width",
      "label": "t:settings.divider_thickness",
      "min": 0,
      "max": 5,
      "step": 0.5,
      "unit": "px",
      "default": 0
