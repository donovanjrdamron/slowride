<script src="{{ 'slideshow.js' | asset_url }}" type="module"></script>

{%- liquid
  assign slide_count = section.blocks.size
  assign desktop_ratio = section.settings.desktop_aspect_ratio
  assign mobile_ratio = section.settings.mobile_aspect_ratio
  assign radius_top = section.settings.corner_radius_top
  assign radius_bottom = section.settings.corner_radius_bottom
-%}

<div
  class="hero-slideshow section--{{ section.settings.section_width }}"
  style="
    --hero-desktop-ratio: {{ desktop_ratio }};
    --hero-mobile-ratio: {{ mobile_ratio }};
    --hero-radius-top: {{ radius_top }}px;
    --hero-radius-bottom: {{ radius_bottom }}px;
    --hero-max-width: {% if section.settings.section_width == 'custom' %}{{ section.settings.custom_width }}px{% else %}none{% endif %};
    --hero-autoplay-speed: {{ section.settings.autoplay_speed }}s;
    {% render 'spacing-style', settings: section.settings %}
  "
>
  {%- if slide_count > 0 -%}
    {%- capture slides_html -%}
      {%- for block in section.blocks -%}
        {%- capture slide_content -%}
          <div class="hero-slideshow__media">
            {%- if block.settings.image != blank -%}
              {{
                block.settings.image
                | image_url: width: 2400
                | image_tag:
                  loading: 'eager',
                  class: 'hero-slideshow__image',
                  sizes: '100vw',
                  widths: '375, 550, 750, 1000, 1250, 1500, 1750, 2000, 2400',
                  alt: block.settings.image.alt
              }}
            {%- else -%}
              <div class="hero-slideshow__placeholder">
                {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-slideshow__placeholder-svg' }}
              </div>
            {%- endif -%}

            {%- if block.settings.mobile_image != blank -%}
              {{
                block.settings.mobile_image
                | image_url: width: 1200
                | image_tag:
                  loading: 'eager',
                  class: 'hero-slideshow__image hero-slideshow__image--mobile',
                  sizes: '100vw',
                  widths: '375, 550, 750, 1000, 1200',
                  alt: block.settings.mobile_image.alt
              }}
            {%- endif -%}

            {%- if block.settings.overlay_opacity > 0 -%}
              <div class="hero-slideshow__overlay" style="background: {{ block.settings.overlay_color }}; opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
            {%- endif -%}

            {%- if block.settings.heading != blank or block.settings.subheading != blank or block.settings.button_text != blank -%}
              <div class="hero-slideshow__content hero-slideshow__content--{{ block.settings.text_alignment }} hero-slideshow__content--v-{{ block.settings.vertical_alignment }}">
                {%- if block.settings.heading != blank -%}
                  <h2 class="hero-slideshow__heading" style="font-size: {{ block.settings.heading_size }}px; color: {{ block.settings.text_color }};">
                    {{ block.settings.heading }}
                  </h2>
                {%- endif -%}
                {%- if block.settings.subheading != blank -%}
                  <p class="hero-slideshow__subheading" style="font-size: {{ block.settings.subheading_size }}px; color: {{ block.settings.text_color }};">
                    {{ block.settings.subheading }}
                  </p>
                {%- endif -%}
                {%- if block.settings.button_text != blank -%}
                  <a
                    href="{{ block.settings.button_link }}"
                    class="hero-slideshow__button"
                    style="
                      background: {{ block.settings.button_bg_color }};
                      color: {{ block.settings.button_text_color }};
                      border-radius: {{ block.settings.button_radius }}px;
                    "
                  >
                    {{ block.settings.button_text }}
                  </a>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        {%- endcapture -%}

        {%- render 'slideshow-slide', index: forloop.index, children: slide_content -%}
      {%- endfor -%}
    {%- endcapture -%}

    {%- capture controls_html -%}
      {%- if slide_count > 1 -%}
        <div class="hero-slideshow__controls">
          <ol class="hero-slideshow__dots">
            {%- for i in (1..slide_count) -%}
              <li>
                <button
                  class="hero-slideshow__dot"
                  aria-label="Go to slide {{ forloop.index }} of {{ slide_count }}"
                  on:click="/select/{{ forloop.index0 }}"
                  ref="dots[]"
                  {% if forloop.first %}aria-selected="true"{% endif %}
                >
                  <span class="visually-hidden">{{ forloop.index }}</span>
                </button>
              </li>
            {%- endfor -%}
          </ol>

          {%- if section.settings.autoplay -%}
            <button
              type="button"
              class="hero-slideshow__pause-btn icon-pause"
              aria-label="Pause slideshow"
              on:click="/pause"
            >
              <svg width="10" height="12" viewBox="0 0 10 12" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <rect x="0" y="0" width="3" height="12" rx="1" fill="currentColor"/>
                <rect x="7" y="0" width="3" height="12" rx="1" fill="currentColor"/>
              </svg>
            </button>
            <button
              type="button"
              class="hero-slideshow__pause-btn icon-play"
              aria-label="Play slideshow"
              on:click="/play"
            >
              <svg width="10" height="12" viewBox="0 0 10 12" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M1 1.5V10.5C1 11.1 1.5 11.4 2 11.1L9.5 6.6C10 6.3 10 5.7 9.5 5.4L2 0.9C1.5 0.6 1 0.9 1 1.5Z" fill="currentColor"/>
              </svg>
            </button>
          {%- endif -%}
        </div>
      {%- endif -%}
    {%- endcapture -%}

    {%- render 'slideshow',
      slides: slides_html,
      controls: controls_html,
      class: 'hero-slideshow__slider',
      autoplay: section.settings.autoplay,
      autoplay_speed: section.settings.autoplay_speed,
      slide_count: slide_count,
      infinite: true
    -%}
  {%- else -%}
    <div class="hero-slideshow__empty">
      <p>Add slides in the theme editor</p>
    </div>
  {%- endif -%}
</div>

{% stylesheet %}
  .hero-slideshow {
    width: 100%;
    margin: 0 auto;
    max-width: var(--hero-max-width, none);
  }

  .hero-slideshow.section--page-width {
    max-width: var(--page-width);
    padding-inline: var(--page-gutter, 20px);
  }

  .hero-slideshow__slider {
    position: relative;
    border-radius: var(--hero-radius-top) var(--hero-radius-top) var(--hero-radius-bottom) var(--hero-radius-bottom);
    overflow: hidden;
  }

  /* Keep all slides pre-rendered so the infinite-loop DOM swap doesn't flash */
  .hero-slideshow slideshow-slide {
    content-visibility: visible !important;
  }

  .hero-slideshow__media {
    position: relative;
    width: 100%;
    aspect-ratio: var(--hero-desktop-ratio);
    overflow: hidden;
  }

  .hero-slideshow__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-slideshow__image--mobile {
    display: none;
  }

  .hero-slideshow__placeholder {
    width: 100%;
    height: 100%;
    background: #e5e7eb;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-slideshow__placeholder-svg {
    width: 60%;
    height: 60%;
    opacity: 0.4;
  }

  .hero-slideshow__overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .hero-slideshow__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 32px;
    z-index: 1;
  }

  .hero-slideshow__content--left {
    align-items: flex-start;
    text-align: left;
  }

  .hero-slideshow__content--center {
    align-items: center;
    text-align: center;
  }

  .hero-slideshow__content--right {
    align-items: flex-end;
    text-align: right;
  }

  .hero-slideshow__content--v-top {
    justify-content: flex-start;
  }

  .hero-slideshow__content--v-center {
    justify-content: center;
  }

  .hero-slideshow__content--v-bottom {
    justify-content: flex-end;
  }

  .hero-slideshow__heading {
    margin: 0;
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.02em;
  }

  .hero-slideshow__subheading {
    margin: 0;
    font-weight: 400;
    line-height: 1.4;
    opacity: 0.9;
  }

  .hero-slideshow__button {
    display: inline-block;
    padding: 12px 28px;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s ease;
    margin-top: 4px;
  }

  .hero-slideshow__button:hover {
    opacity: 0.85;
  }

  .hero-slideshow__empty {
    aspect-ratio: var(--hero-desktop-ratio);
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--hero-radius-top) var(--hero-radius-top) var(--hero-radius-bottom) var(--hero-radius-bottom);
    color: #999;
  }

  /* ── Custom controls bar ── */
  .hero-slideshow__controls {
    position: absolute;
    bottom: 16px;
    left: 0;
    right: 0;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20px;
    pointer-events: none;
  }

  /* ── Dots ── */
  .hero-slideshow__dots {
    list-style: none;
    display: flex;
    gap: 10px;
    padding: 0;
    margin: 0;
    align-items: center;
    pointer-events: auto;
  }

  .hero-slideshow__dots li {
    line-height: 0;
  }

  .hero-slideshow__dot {
    position: relative;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.45);
    border: none;
    padding: 0;
    cursor: pointer;
    transition: background 0.25s ease;
    overflow: hidden;
    font-size: 0;
  }

  .hero-slideshow__dot::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: #fff;
    transform: scale(0);
    transform-origin: center;
    pointer-events: none;
  }

  .hero-slideshow__dot[aria-selected="true"] {
    background: rgba(255, 255, 255, 0.45);
  }

  .hero-slideshow__dot[aria-selected="true"]::after {
    animation: hero-dot-fill var(--hero-autoplay-speed, 5s) linear forwards;
  }

  slideshow-component[paused] .hero-slideshow__dot[aria-selected="true"]::after {
    animation-play-state: paused;
  }

  slideshow-component:not([autoplay]) .hero-slideshow__dot::after {
    animation: none;
  }

  slideshow-component:not([autoplay]) .hero-slideshow__dot[aria-selected="true"] {
    background: #fff;
  }

  @keyframes hero-dot-fill {
    0% { transform: scale(0); }
    100% { transform: scale(1); }
  }

  /* ── Pause / Play button ── */
  .hero-slideshow__pause-btn {
    position: absolute;
    left: 20px;
    bottom: 0;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: none;
    background: rgba(0, 0, 0, 0.35);
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    pointer-events: auto;
    transition: background 0.2s ease;
    padding: 0;
  }

  .hero-slideshow__pause-btn:hover {
    background: rgba(0, 0, 0, 0.55);
  }

  .hero-slideshow__pause-btn svg {
    width: 10px;
    height: 12px;
  }

  .hero-slideshow__pause-btn.icon-play {
    display: none;
  }

  slideshow-component[paused] .hero-slideshow__pause-btn.icon-pause {
    display: none;
  }

  slideshow-component[paused] .hero-slideshow__pause-btn.icon-play {
    display: flex;
  }

  @media screen and (max-width: 749px) {
    .hero-slideshow__media {
      aspect-ratio: var(--hero-mobile-ratio);
    }

    .hero-slideshow__media:has(.hero-slideshow__image--mobile) > .hero-slideshow__image:not(.hero-slideshow__image--mobile) {
      display: none;
    }

    .hero-slideshow__media:has(.hero-slideshow__image--mobile) > .hero-slideshow__image--mobile {
      display: block;
    }

    .hero-slideshow__content {
      padding: 20px;
    }

    .hero-slideshow__controls {
      bottom: 12px;
      padding: 0 14px;
    }

    .hero-slideshow__pause-btn {
      left: 14px;
      width: 28px;
      height: 28px;
    }

    .hero-slideshow__pause-btn svg {
      width: 8px;
      height: 10px;
    }
  }
{% endstylesheet %}

